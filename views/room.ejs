							$("#td_" + solve[i].row + "_" + solve[i].col).append("<span class='score score_" + solve[i].bonus + "'></span>");
						}
					}
					return bonus_score;
				}
				var bonus_score = bonusScore();
				var saved = $(".saved").length;
				var score = tile_engine[engineNum].score - complete.length + 1 - saved;//점수 손봐야함
				success = "성공";
				if (bonus_score > 0) {
					$(".board h3 span").text("획득 가능 점수 : " + score + "점 (보너스 + " + bonus_score + "점)");
				} else {
					$(".board h3 span").text("획득 가능 점수 : " + score + "점");	
				}
				return [success, score, complete, bonus_score];
			} else {
				console.log("실패");
				success = "실패";
				$(".board h3 span").text("");
				return success;
			}
		}
		$("body").keydown(function (e) {
			if (e.keyCode == 13) {
				$(".wrap_tile span").remove();
				$(".board td p").remove();
				checkTile();
			}
		});
		$(".complete").click(function(e) {
			e.preventDefault();
			var result = checkTile();
			var success = result[0];
			var score = result[1];
			var complete = result[2];
			var bonus = result[3];
			if (success === "성공") {
				console.log("성공");
				$.post("/ajaxSaveTile?roomId=<%= room._id %>", { "score": score, "bonus": bonus, "complete": complete },function(data) {
					if (data.result === "성공") {
						alert("배치 완료! " + score + "점 획득");
						location.reload();
					} else if (data.result === "실패") {
						alert("배치 실패 : " + data.text);
					}
				}, "json");
			}
		});
	});
</script>
